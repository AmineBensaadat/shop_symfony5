{% extends 'base.html.twig' %}

{% block title %} Products {% endblock %}

{% block content %}
<div class="row">
    <div class="col-md-3">
        <h3>Filter</h1>
        {{ form(form) }}
    </div>
    <div class="col-md-9">
        <h3> all produts </h1>
        <div class="row product-container">
        {% for product in products %}
        
            <div class="col-md-3">
                <div class="product-item text-center">
                    <a href="{{ path('product', { 'slug' : product.slug }) }}">
                    <img src="/uploads/{{ product.illustration }}" alt="{{ product.illustration }}" class="img-fluid" >
                    </a>
                    <h5> {{ product.name }}</h5>
                    <span class="product-subtitle"> {{ product.subtitle }} </span>
                    <span class="product-price">{{ (product.price / 100)  | number_format(2, ',','.') }} MAD</span>
                </div>
            </div>


        {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
